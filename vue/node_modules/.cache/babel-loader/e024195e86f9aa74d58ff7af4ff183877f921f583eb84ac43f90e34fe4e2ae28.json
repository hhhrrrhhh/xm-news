{"ast":null,"code":"import E from \"wangeditor\";\nexport default {\n  data() {\n    return {\n      provincesList: [],\n      tableData: [],\n      pageNum: 1,\n      pageSize: 10,\n      total: 0,\n      title: null,\n      fromVisible: false,\n      fromVisible1: false,\n      form: {},\n      content: '',\n      ids: [],\n      editor: null // 富文本编辑器实例\n    };\n  },\n\n  created() {\n    this.load(1);\n    this.$request.get('/provinces/selectAll').then(res => {\n      this.provincesList = res.data;\n    });\n  },\n  methods: {\n    preview(content) {\n      this.content = content;\n      this.fromVisible1 = true;\n    },\n    handleAdd() {\n      this.form = {};\n      this.fromVisible = true;\n      this.setRichText('');\n    },\n    handleEdit(row) {\n      this.form = JSON.parse(JSON.stringify(row));\n      this.fromVisible = true;\n      this.setRichText(this.form.content);\n    },\n    save() {\n      this.$refs.formRef.validate(valid => {\n        if (valid) {\n          this.form.content = this.editor.txt.html(); // 获取富文本内容\n          this.$request({\n            url: this.form.id ? '/news/update' : '/news/add',\n            method: this.form.id ? 'PUT' : 'POST',\n            data: this.form\n          }).then(res => {\n            if (res.code === '200') {\n              this.$message.success('保存成功');\n              this.load(1);\n              this.fromVisible = false;\n            } else {\n              this.$message.error(res.msg);\n            }\n          });\n        }\n      });\n    },\n    del(id) {\n      this.$confirm('您确定删除吗？', '确认删除', {\n        type: \"warning\"\n      }).then(() => {\n        this.$request.delete('/news/delete/' + id).then(res => {\n          if (res.code === '200') {\n            this.$message.success('操作成功');\n            this.load(1);\n          } else {\n            this.$message.error(res.msg);\n          }\n        });\n      }).catch(() => {});\n    },\n    handleSelectionChange(rows) {\n      this.ids = rows.map(v => v.id);\n    },\n    delBatch() {\n      if (!this.ids.length) {\n        this.$message.warning('请选择数据');\n        return;\n      }\n      this.$confirm('您确定批量删除这些数据吗？', '确认删除', {\n        type: \"warning\"\n      }).then(() => {\n        this.$request.delete('/news/delete/batch', {\n          data: this.ids\n        }).then(res => {\n          if (res.code === '200') {\n            this.$message.success('操作成功');\n            this.load(1);\n          } else {\n            this.$message.error(res.msg);\n          }\n        });\n      }).catch(() => {});\n    },\n    load(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/news/selectPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          title: this.title\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.tableData = res.data?.list;\n          this.total = res.data?.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    reset() {\n      this.title = null;\n      this.load(1);\n    },\n    handleCurrentChange(pageNum) {\n      this.load(pageNum);\n    },\n    setRichText(html) {\n      this.$nextTick(() => {\n        this.editor = new E('#editor');\n        this.editor.create();\n        this.editor.txt.html(html);\n      });\n    }\n  }\n};","map":{"version":3,"names":["E","data","provincesList","tableData","pageNum","pageSize","total","title","fromVisible","fromVisible1","form","content","ids","editor","created","load","$request","get","then","res","methods","preview","handleAdd","setRichText","handleEdit","row","JSON","parse","stringify","save","$refs","formRef","validate","valid","txt","html","url","id","method","code","$message","success","error","msg","del","$confirm","type","delete","catch","handleSelectionChange","rows","map","v","delBatch","length","warning","params","list","reset","handleCurrentChange","$nextTick","create"],"sources":["src/views/manager/News.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <div class=\"search\">\r\n      <el-input placeholder=\"请输入新闻标题关键字查询\" style=\"width: 200px\" v-model=\"title\"></el-input>\r\n      <el-button type=\"info\" plain style=\"margin-left: 10px\" @click=\"load(1)\">查询</el-button>\r\n      <el-button type=\"warning\" plain style=\"margin-left: 10px\" @click=\"reset\">重置</el-button>\r\n    </div>\r\n\r\n    <div class=\"operation\">\r\n      <el-button type=\"primary\" plain @click=\"handleAdd\">新增</el-button>\r\n      <el-button type=\"danger\" plain @click=\"delBatch\">批量删除</el-button>\r\n    </div>\r\n\r\n    <div class=\"table\">\r\n      <el-table :data=\"tableData\" @selection-change=\"handleSelectionChange\">\r\n        <el-table-column type=\"selection\" width=\"55\"></el-table-column>\r\n\r\n        <!-- 隐藏 ID 列 -->\r\n        <el-table-column prop=\"id\" label=\"序号\" width=\"70\" v-if=\"false\"></el-table-column>\r\n\r\n        <!-- 显示自动生成的序号 -->\r\n        <el-table-column label=\"序号\" width=\"70\">\r\n          <template v-slot=\"scope\">\r\n            <span>{{ (pageNum - 1) * pageSize + scope.$index + 1 }}</span>\r\n          </template>\r\n        </el-table-column>\r\n\r\n        <el-table-column prop=\"title\" label=\"新闻标题\"></el-table-column>\r\n        <el-table-column prop=\"provincesName\" label=\"省份名称\"></el-table-column>\r\n        <el-table-column label=\"操作\" width=\"180\">\r\n          <template v-slot=\"scope\">\r\n            <el-button size=\"mini\" type=\"primary\" plain @click=\"handleEdit(scope.row)\">编辑</el-button>\r\n            <el-button size=\"mini\" type=\"danger\" plain @click=\"del(scope.row.id)\">删除</el-button>\r\n          </template>\r\n        </el-table-column>\r\n      </el-table>\r\n      <el-pagination\r\n          @current-change=\"handleCurrentChange\"\r\n          :current-page=\"pageNum\"\r\n          :page-sizes=\"[5, 10, 20]\"\r\n          :page-size=\"pageSize\"\r\n          layout=\"total, prev, pager, next\"\r\n          :total=\"total\">\r\n      </el-pagination>\r\n    </div>\r\n\r\n    <el-dialog :visible.sync=\"fromVisible\" :close-on-click-modal=\"false\" destroy-on-close>\r\n      <span slot=\"title\">新闻信息</span>\r\n      <el-form :model=\"form\" :rules=\"rules\" ref=\"formRef\">\r\n        <el-form-item label=\"新闻标题\" prop=\"title\">\r\n          <el-input v-model=\"form.title\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"省份名称\" prop=\"provincesId\">\r\n          <el-select v-model=\"form.provincesId\">\r\n            <el-option v-for=\"item in provincesList\" :key=\"item.provincesId\" :value=\"item.provincesId\" :label=\"item.provincesName\"></el-option>\r\n          </el-select>\r\n        </el-form-item>\r\n        <el-form-item label=\"新闻内容\" prop=\"content\"></el-form-item>\r\n        <div id=\"editor\"></div>\r\n      </el-form>\r\n      <span slot=\"footer\" class=\"dialog-footer\">\r\n        <el-button @click=\"fromVisible = false\">取 消</el-button>\r\n        <el-button type=\"primary\" @click=\"save\">确 定</el-button>\r\n      </span>\r\n    </el-dialog>\r\n\r\n    <el-dialog :visible.sync=\"fromVisible1\" :close-on-click-modal=\"false\" destroy-on-close>\r\n      <span slot=\"title\">文章内容</span>\r\n      <div class=\"w-e-text\">\r\n        <div v-html=\"content\"></div>\r\n      </div>\r\n      <span slot=\"footer\" class=\"dialog-footer\">\r\n        <el-button @click=\"fromVisible1 = false\">关 闭</el-button>\r\n      </span>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport E from \"wangeditor\"\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      provincesList: [],\r\n      tableData: [],\r\n      pageNum: 1,\r\n      pageSize: 10,\r\n      total: 0,\r\n      title: null,\r\n      fromVisible: false,\r\n      fromVisible1: false,\r\n      form: {},\r\n      content: '',\r\n      ids: [],\r\n      editor: null,  // 富文本编辑器实例\r\n    }\r\n  },\r\n  created() {\r\n    this.load(1)\r\n    this.$request.get('/provinces/selectAll').then(res => {\r\n      this.provincesList = res.data\r\n    })\r\n  },\r\n  methods: {\r\n    preview(content) {\r\n      this.content = content\r\n      this.fromVisible1 = true\r\n    },\r\n    handleAdd() {\r\n      this.form = {}\r\n      this.fromVisible = true\r\n      this.setRichText('')\r\n    },\r\n    handleEdit(row) {\r\n      this.form = JSON.parse(JSON.stringify(row))\r\n      this.fromVisible = true\r\n      this.setRichText(this.form.content)\r\n    },\r\n    save() {\r\n      this.$refs.formRef.validate((valid) => {\r\n        if (valid) {\r\n          this.form.content = this.editor.txt.html()  // 获取富文本内容\r\n          this.$request({\r\n            url: this.form.id ? '/news/update' : '/news/add',\r\n            method: this.form.id ? 'PUT' : 'POST',\r\n            data: this.form\r\n          }).then(res => {\r\n            if (res.code === '200') {\r\n              this.$message.success('保存成功')\r\n              this.load(1)\r\n              this.fromVisible = false\r\n            } else {\r\n              this.$message.error(res.msg)\r\n            }\r\n          })\r\n        }\r\n      })\r\n    },\r\n    del(id) {\r\n      this.$confirm('您确定删除吗？', '确认删除', {type: \"warning\"}).then(() => {\r\n        this.$request.delete('/news/delete/' + id).then(res => {\r\n          if (res.code === '200') {\r\n            this.$message.success('操作成功')\r\n            this.load(1)\r\n          } else {\r\n            this.$message.error(res.msg)\r\n          }\r\n        })\r\n      }).catch(() => {})\r\n    },\r\n    handleSelectionChange(rows) {\r\n      this.ids = rows.map(v => v.id)\r\n    },\r\n    delBatch() {\r\n      if (!this.ids.length) {\r\n        this.$message.warning('请选择数据')\r\n        return\r\n      }\r\n      this.$confirm('您确定批量删除这些数据吗？', '确认删除', {type: \"warning\"}).then(() => {\r\n        this.$request.delete('/news/delete/batch', {data: this.ids}).then(res => {\r\n          if (res.code === '200') {\r\n            this.$message.success('操作成功')\r\n            this.load(1)\r\n          } else {\r\n            this.$message.error(res.msg)\r\n          }\r\n        })\r\n      }).catch(() => {})\r\n    },\r\n    load(pageNum) {\r\n      if (pageNum) this.pageNum = pageNum\r\n      this.$request.get('/news/selectPage', {\r\n        params: {\r\n          pageNum: this.pageNum,\r\n          pageSize: this.pageSize,\r\n          title: this.title,\r\n        }\r\n      }).then(res => {\r\n        if (res.code === '200') {\r\n          this.tableData = res.data?.list\r\n          this.total = res.data?.total\r\n        } else {\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n    reset() {\r\n      this.title = null\r\n      this.load(1)\r\n    },\r\n    handleCurrentChange(pageNum) {\r\n      this.load(pageNum)\r\n    },\r\n    setRichText(html) {\r\n      this.$nextTick(() => {\r\n        this.editor = new E('#editor')\r\n        this.editor.create()\r\n        this.editor.txt.html(html)\r\n      })\r\n    },\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n</style>\r\n"],"mappings":"AA+EA,OAAAA,CAAA;AAEA;EACAC,KAAA;IACA;MACAC,aAAA;MACAC,SAAA;MACAC,OAAA;MACAC,QAAA;MACAC,KAAA;MACAC,KAAA;MACAC,WAAA;MACAC,YAAA;MACAC,IAAA;MACAC,OAAA;MACAC,GAAA;MACAC,MAAA;IACA;EACA;;EACAC,QAAA;IACA,KAAAC,IAAA;IACA,KAAAC,QAAA,CAAAC,GAAA,yBAAAC,IAAA,CAAAC,GAAA;MACA,KAAAjB,aAAA,GAAAiB,GAAA,CAAAlB,IAAA;IACA;EACA;EACAmB,OAAA;IACAC,QAAAV,OAAA;MACA,KAAAA,OAAA,GAAAA,OAAA;MACA,KAAAF,YAAA;IACA;IACAa,UAAA;MACA,KAAAZ,IAAA;MACA,KAAAF,WAAA;MACA,KAAAe,WAAA;IACA;IACAC,WAAAC,GAAA;MACA,KAAAf,IAAA,GAAAgB,IAAA,CAAAC,KAAA,CAAAD,IAAA,CAAAE,SAAA,CAAAH,GAAA;MACA,KAAAjB,WAAA;MACA,KAAAe,WAAA,MAAAb,IAAA,CAAAC,OAAA;IACA;IACAkB,KAAA;MACA,KAAAC,KAAA,CAAAC,OAAA,CAAAC,QAAA,CAAAC,KAAA;QACA,IAAAA,KAAA;UACA,KAAAvB,IAAA,CAAAC,OAAA,QAAAE,MAAA,CAAAqB,GAAA,CAAAC,IAAA;UACA,KAAAnB,QAAA;YACAoB,GAAA,OAAA1B,IAAA,CAAA2B,EAAA;YACAC,MAAA,OAAA5B,IAAA,CAAA2B,EAAA;YACApC,IAAA,OAAAS;UACA,GAAAQ,IAAA,